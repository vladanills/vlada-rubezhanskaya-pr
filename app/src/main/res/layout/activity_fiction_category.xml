<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_height="match_parent"
             android:layout_width="wrap_content"
             android:background="@drawable/back1">
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
    >
        <android.support.v7.widget.CardView
                android:id="@+id/detect"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView"
                        android:background="@drawable/det"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                       />
                <TextView
                        android:id="@+id/titleView"
                        android:text="Детективы"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/notes"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView2"
                        android:background="@drawable/gr"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"/>
                <TextView
                        android:id="@+id/titleView2"
                        android:text="Романы"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/sovrprosa"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView3"
                        android:background="@drawable/sovr"
                        android:layout_width="211dp"
                        android:layout_height="200dp"/>
                <TextView
                        android:id="@+id/titleView3"
                        android:text="Современная проза"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginBottom="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/bags"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView4"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="199dp"
                        android:background="@drawable/has"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                <TextView
                        android:id="@+id/titleView4"
                        android:text="Классическая проза"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/pism"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView"
                        android:background="@drawable/fant"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                <TextView
                        android:id="@+id/titleView"
                        android:text="Фантастика и фэнтези"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/pism"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/pictureView"
                        android:background="@drawable/sena"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                <TextView
                        android:id="@+id/titleView"
                        android:text="Поэзия"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/vengeance"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</FrameLayout>
</ScrollView>