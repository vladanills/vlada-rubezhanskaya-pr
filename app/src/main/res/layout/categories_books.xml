<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:id="@+id/PictureFiction"
                android:background="@drawable/fic2"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:scaleType="centerCrop"
        />
        <TextView
                android:id="@+id/textFiction"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:text="Художественная литература"
                android:layout_gravity="center"
                android:fontFamily="@font/vengeance"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
        />
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/PictureNotFiction"
                android:background="@drawable/fk"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:scaleType="centerCrop"
        />
        <TextView
                android:id="@+id/textnotFiction"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Нехудожественная литература"
                android:fontFamily="@font/vengeance"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
        />
    </FrameLayout>


</LinearLayout>